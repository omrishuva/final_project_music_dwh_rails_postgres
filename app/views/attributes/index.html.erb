<h1>Mettributes</h1>

<div class="row">
  <div class="span8">
    <h3><%=headline_fromat(@attributes.try(:count),params[:table])%></h3>
  <div class="span3">  
    <h2>Tables</h2>
  </div>
  <div class="span5">
    <%@tables.each do |table|%>
      <ul class="unstyled">
        <li>
          <strong>
            <%=link_to table , attributes_path(params.merge({table:table}))%>
          </strong>
        </li>
      </ul>
    <%end%>      
  </div>         
</div>

<%if @attributes%>
  <table>
    <tr>
      <th>Attribute name</th>
      <th></th>
      <th></th>
    </tr>
    
    <% @attributes.each do |attribute| %>
      <tr>
        <td><%=attribute.attribute_name%></td>
        <td><%= link_to 'Show', attribute %></td>
        <td><%= link_to 'Edit', edit_attribute_path(attribute) %></td>
        <td><%= link_to 'Destroy', attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </table>
 <%end%>

