<h1>Mettributes</h1>

<div class="row">
  <div class="span8">
    <h3><%=headline_fromat(@attributes.try(:count),params[:table])%></h3>
  <div class="span3">  
    <h2>Tables</h2>
  </div>
  <div class="span5">
    <%@tables.each do |table|%>
      <ul class="unstyled">
        <li>
          <strong>
            <%=link_to table , attributes_path(params.merge({table:table}))%>
          </strong>
        </li>
      </ul>
    <%end%>      
  </div>         
</div>

<%if @attributes%>

  <%=form_tag(add_category_attributes_path, method: "put", class: "form-actions") do %>
    <table>
      <tr>
        <th>Select</th>
        <th></th>
        <th></th>
        <th>Attributes</th>
      </tr>
      
      <% @attributes.each do |attribute| %>
        <tr>
          <td><%= check_box_tag "selected[#{attribute.id}]"%></td>
          <td><td>
          <td><%=label_tag attribute.attribute_name%></td>
        </tr>
      <% end %>  
    </table>
    <div><%= submit_tag 'Save' %></div>
  <%end%>
  
  
  <%end%> 
<br />
          